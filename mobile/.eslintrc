{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "plugins": [
    "babel",
    "react"
  ],
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "globals": {
    "__DEV__": true,
    "React$Element": true
  },
  "rules": {
    "arrow-body-style": 0,
    "arrow-parens": [2, "always"],
    "import/extensions": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-unresolved": 0,
    "import/prefer-default-export": 0,
    "jsx-boolean-value": 0,
    "no-floating-decimal": 0,
    "radix": ["error", "as-needed"],
    "react/jsx-filename-extension": 0,
    "react/sort-comp": 0,
    "semi": [2, "never"]
  }
}
